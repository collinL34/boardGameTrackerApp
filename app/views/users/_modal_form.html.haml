.ui.large.modal
  .header Login
  .content
    = form_for(:session, url: login_path, :html => {:class => "ui form"}) do |f|
      .field
        = f.label :username
        = f.text_field :username
      .field
        = f.label :password
        = f.password_field :password
      = f.submit "Login", :class => 'ui button'